{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "R:\\Test-Projects\\pass-cli\\"
      ],
      "enabled": true
    },
    "spec-workflow": {
      "type": "local",
      "command": [
        "npx",
        "@pimzino/spec-workflow-mcp@latest",
        "R:\\Test-Projects\\pass-cli\\",
        "--AutoStartDashboard"
      ],
      "enabled": true
    }
  },
}